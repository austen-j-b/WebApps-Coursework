@model WebApps.Models.CreatePostViewModel
@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<form method="post" asp-controller="Home" asp-action="Create">
    <div asp-validation-summary="All"></div>

    <div>
        <input asp-for="Title" placeholder="Title..."/>
        <span asp-validation-for="Title"></span>
    </div>
    <br />
    <div>
        <textarea asp-for="PostText" placeholder="Post Contents..." class="commentBox"></textarea>
        <span asp-validation-for="PostText"></span>
    </div>
    <div>
        <input type="submit" value="Create" class="customButton" />
    </div>
</form>

